<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.dotvoid.drona.MainActivity">


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:src="@drawable/logo1"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/usern"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:inputType="textVisiblePassword|textNoSuggestions"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:hint="Username"
                android:textColorHint="#BFBFBF"
                android:textColor="#BFBFBF"
                />

            <View
                android:layout_width="fill_parent"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_height="1dp"
                android:layout_marginTop="-6dp"
                android:background="#BFBFBF"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                >

                <EditText
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:fontFamily="sans-serif"
                    android:textSize="15dp"
                    android:hint="Password"
                    android:backgroundTint="@android:color/transparent"
                    android:textColorHint="#BFBFBF"
                    android:textColor="#BFBFBF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Forgot Password?"
                    android:onClick=""
                    android:gravity="bottom"
                    android:textColor="#BFBFBF"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_height="1dp"
                android:layout_marginTop="-6dp"
                android:background="#BFBFBF"/>

            <Button
                android:id="@+id/login"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/curverbutton"
                android:text="LOG IN"
                android:textColor="#ffffff"
                android:textSize="20dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp">

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:text="Log in with Social Account"
                    android:textColor="#ffffff"
                    android:textSize="13dp" />

                <ImageView
                    android:onClick="link_to_facebook"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="60dp"
                    android:src="@drawable/facebook"/>

                <ImageView
                    android:onClick="link_to_twitter"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/twitter"
                    android:layout_marginBottom="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    />

                <ImageView
                    android:onClick="link_to_google_plus"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/google"
                    android:layout_marginBottom="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="60dp"
                    />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_height="1dp"
                android:background="#BFBFBF"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                >
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Don't have account?"
                    android:textColor="#BFBFBF"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="SIGN UP"
                    android:onClick="signup"
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />

            </LinearLayout>


        </LinearLayout>


    </ScrollView>



</LinearLayout>
