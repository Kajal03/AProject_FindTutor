<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.dotvoid.drona.number_register">


    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo1"/>

    <ImageView
        android:src="@drawable/signup1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="44dp" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:gravity="center"
        android:inputType="number"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:hint="Enter Phone Number"
        android:textColorHint="#BFBFBF"
        android:textColor="#BFBFBF"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_height="1dp"
        android:layout_marginTop="-10dp"
        android:background="#BFBFBF"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:hint="Verification code will be sent to this number"
        android:gravity="center"
        android:textColorHint="#BFBFBF"
        android:textColor="#BFBFBF" />

    <Button
        android:id="@+id/numreg"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/curverbutton"
        android:text="NEXT"
        android:textColor="#ffffff"
        android:textSize="17dp"
        />

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Log in with Social Account"
            android:textColor="#ffffff"
            android:textSize="13dp" />

        <ImageView
            android:onClick="link_to_facebook"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="60dp"
            android:src="@drawable/facebook"/>

        <ImageView
            android:onClick="link_to_twitter"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/twitter"
            android:layout_marginBottom="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:onClick="link_to_google_plus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/google"
            android:layout_marginBottom="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="60dp"
            />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_height="1dp"
        android:background="#BFBFBF"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        >
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textColor="#BFBFBF"
            android:textSize="13dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="LOG IN"
            android:onClick="go_to_main_act"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_gravity="center"
            />

    </LinearLayout>


</LinearLayout>
