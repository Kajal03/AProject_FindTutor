<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dotvoid.drona.Profile"
    tools:showIn="@layout/app_bar_profile">


    <ImageView
        android:id="@+id/image"
        android:src="@drawable/img4"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:id="@+id/teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ANURAG JOSHI"
        android:textSize="20dp"
        android:layout_gravity="center"
        />

    <TextView
        android:textColor="#abcdef"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gaming Enthusiast. Unity and c# expert. Android App developer. Athelete. UI/UX Designer."
        android:textSize="15dp"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Qualification"
            android:textSize="20dp"
            android:layout_marginLeft="35dp"/>

        <TextView
            android:textColor="#abcdef"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="BSc. CEH. Unity Certified Programmer."
            android:id="@+id/qualification"
            android:layout_marginLeft="22dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Email"
            android:textSize="20dp"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:textColor="#abcdef"
            android:layout_gravity="center"
            android:text="anurag_joshi@outlok.com"
            android:gravity="center"
            android:id="@+id/emailID"
            android:layout_marginLeft="50dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>
