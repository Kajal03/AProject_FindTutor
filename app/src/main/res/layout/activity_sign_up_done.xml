<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_done"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.dotvoid.drona.SignUpDone">

    <ToggleButton
        android:id="@+id/invert_color"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo1"/>


    <ImageView
        android:src="@drawable/signup5"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="44dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/tick"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="-5dp"
        android:fontFamily=""
        android:layout_gravity="center"
        android:gravity="center"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:text="@string/done"
        android:textColorHint="#17BEBB"
        android:textColor="#17BEBB"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/learn"
        android:gravity="bottom"
        android:textColor="#BFBFBF"
        android:layout_marginTop="-5dp"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:id="@+id/login"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:background="@drawable/curverbutton"
        android:text="@string/login"
        android:textColor="#ffffff"
        android:textSize="20dp"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:layout_marginLeft="60dp"
            android:id="@+id/check"
            android:layout_width="30dp"
            android:checked="false"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/checkedTextView"
            android:layout_alignBottom="@+id/checkedTextView"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_toRightOf="@id/check"
            android:layout_marginTop="40dp"
            android:textSize="14dp"
            android:textColor="#BFBFBF"
            android:layout_gravity="center"
            android:checked="false"
            android:layout_marginLeft="5dp"
            android:text="Accept the terms and conditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkedTextView" />

    </RelativeLayout>



</LinearLayout>
